datasource db {
    url = env("DATABASE_URL")
    provider = "postgresql"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    @@map("users")
    id Int @id @default(autoincrement())
    uuid String @unique @default(uuid())
    name String?
    credentials Credentials?
}

model Credentials {    
    @@map("credentials")
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id])
    userId Int
    email String @unique
    password String
    passwordSalt String
}